{% extends 'base.html.twig' %}

{% block title %}Post - {{ post.title }}{% endblock %}

{% block body %}
    <div style="color: gray;">
        <h3>{{ post.title }}</h3>
        <div>{{ post.text }}</div>
        {% if date(post.created) < date('-1year') %}
            Older then 1 year
        {% else %}
            {{ post.created|date('d/m/Y') }}
        {% endif %}
    </div>
{% endblock %}
